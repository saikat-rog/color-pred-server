generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for authentication
model User {
  id          Int      @id @default(autoincrement())
  phoneNumber String   @unique @map("phone_number")
  password    String
  isVerified  Boolean  @default(false) @map("is_verified")
  isBanned    Boolean  @default(false) @map("is_banned")
  balance     Float    @default(0)
  referredById Int?     @map("referred_by_id") // The user who referred this user
  hasClaimedReferralBonus Boolean @default(false) @map("has_claimed_referral_bonus") // Track if referral bonus was given to referrer
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  refreshTokens RefreshToken[]
  bankAccounts  BankAccount[]
  withdrawalRequests WithdrawalRequest[]
  transactions  Transaction[]
  bets          Bet[]
  referredBy    User?    @relation("UserReferrals", fields: [referredById], references: [id], onDelete: SetNull)
  referrals     User[]   @relation("UserReferrals")
  referralCommissions ReferralCommission[]

  @@map("users")
}

// OTP session model for verification
model OTPSession {
  id          Int      @id @default(autoincrement())
  phoneNumber String   @map("phone_number")
  otp         String
  expiresAt   DateTime @map("expires_at")
  attempts    Int      @default(0)
  isUsed      Boolean  @default(false) @map("is_used")
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([phoneNumber])
  @@index([expiresAt])
  @@map("otp_sessions")
}

// Refresh token model for JWT management
model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int      @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

// Bank account model for user banking information
model BankAccount {
  id            Int      @id @default(autoincrement())
  userId        Int      @map("user_id")
  accountNumber String   @map("account_number")
  accountName   String   @map("account_name")
  ifscCode      String   @map("ifsc_code")
  upiId         String?  @map("upi_id") // Optional field
  isDefault     Boolean  @default(false) @map("is_default")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  withdrawalRequests WithdrawalRequest[]

  @@index([userId])
  @@map("bank_accounts")
}

// Withdrawal request model for user withdrawal requests
model WithdrawalRequest {
  id              Int      @id @default(autoincrement())
  userId          Int      @map("user_id")
  bankAccountId   Int      @map("bank_account_id")
  amount          Float
  status          String   @default("pending") // pending, approved, rejected, processed
  requestedAt     DateTime @default(now()) @map("requested_at")
  processedAt     DateTime? @map("processed_at")
  adminNotes      String?  @map("admin_notes")
  transactionId   String?  @map("transaction_id")
  rejectionReason String?  @map("rejection_reason")

  // Relations
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccount BankAccount @relation(fields: [bankAccountId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([status])
  @@index([requestedAt])
  @@map("withdrawal_requests")
}

// Transaction model for tracking all financial activities
model Transaction {
  id              Int               @id @default(autoincrement())
  userId          Int               @map("user_id")
  type            TransactionType
  amount          Float
  status          TransactionStatus @default(pending)
  description     String?
  referenceId     String?           @map("reference_id") // Can link to withdrawal request, recharge, etc.
  balanceBefore   Float             @map("balance_before")
  balanceAfter    Float             @map("balance_after")
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([createdAt])
  @@map("transactions")
}

enum TransactionType {
  withdrawal
  recharge
  bonus
  refund
  penalty
  bet_debit
  bet_win_credit
  referral_commission
  referral_bonus
}

enum TransactionStatus {
  pending
  completed
  failed
  cancelled
}

enum Color {
  green
  purple
  red
}

enum Numbers {
  zero
  one
  two
  three
  four
  five
  six
  seven
  eight
  nine
}

// Game settings model for configurable parameters
model GameSettings {
  id                    Int      @id @default(autoincrement())
  periodDuration        Int      @default(180) @map("period_duration") // in seconds (3 minutes)
  bettingDuration       Int      @default(150) @map("betting_duration") // in seconds (2:30 minutes)
  winMultiplier         Float    @default(1.8) @map("win_multiplier") // multiplier for winning bets
  winMultiplierForNumberBet   Float    @default(9.0) @map("win_multiplier_for_number_bet") // multiplier for winning number bets
  winMultiplierForNumberBetOnZeroOrFive   Float    @default(5.0) @map("win_multiplier_for_number_bet_on_zero_or_five") // multiplier for winning number bets on zero or five
  minBetAmount          Float    @default(10) @map("min_bet_amount")
  maxBetAmount          Float    @default(10000000000) @map("max_bet_amount")
  referralCommissionPercentage1  Float    @default(1.0) @map("referral_commission_l1") // Level 1: Direct referral (1%)
  referralCommissionPercentage2  Float    @default(0.5) @map("referral_commission_l2") // Level 2: Referral's referral (0.5%)
  referralCommissionPercentage3  Float    @default(0.25) @map("referral_commission_l3") // Level 3: Referral's referral's referral (0.25%)
  referralSignupBonusInRs   Float    @default(1.0) @map("referral_signup_bonus") // Bonus for referrer when referral signs up and recharges
  minRechargeForBonus   Float    @default(500.0) @map("min_recharge_for_bonus") // Minimum recharge amount to trigger referral bonus
  updatedAt             DateTime @updatedAt @map("updated_at")

  @@map("game_settings")
}

// Game period model
model GamePeriod {
  id              Int       @id @default(autoincrement())
  periodId        String    @unique @map("period_id") // Format: YYYYMMDD001
  startTime       DateTime  @map("start_time")
  endTime         DateTime  @map("end_time")
  bettingEndTime  DateTime  @map("betting_end_time") // endTime - 30 seconds
  status          String    @default("active") // active, betting_closed, completed
  winningColor    Color?    @map("winning_color")
  winningNumber   Numbers?  @map("winning_number")
  totalGreenBets  Float     @default(0) @map("total_green_bets")
  totalPurpleBets Float     @default(0) @map("total_purple_bets")
  totalRedBets    Float     @default(0) @map("total_red_bets")
  totalZeroBets   Float     @default(0) @map("total_zero_bets")
  totalOneBets    Float     @default(0) @map("total_one_bets")
  totalTwoBets    Float     @default(0) @map("total_two_bets")
  totalThreeBets  Float     @default(0) @map("total_three_bets")
  totalFourBets   Float     @default(0) @map("total_four_bets")
  totalFiveBets   Float     @default(0) @map("total_five_bets")
  totalSixBets    Float     @default(0) @map("total_six_bets")
  totalSevenBets  Float     @default(0) @map("total_seven_bets")
  totalEightBets  Float     @default(0) @map("total_eight_bets")
  totalNineBets   Float     @default(0) @map("total_nine_bets")
  createdAt       DateTime  @default(now()) @map("created_at")
  completedAt     DateTime? @map("completed_at")

  // Relations
  bets Bet[]

  @@index([periodId])
  @@index([status])
  @@index([startTime])
  @@map("game_periods")
}

// Bet model
model Bet {
  id              Int        @id @default(autoincrement())
  userId          Int        @map("user_id")
  periodId        String     @map("period_id")
  gamePeriodId    Int        @map("game_period_id")
  color           Color?
  number          Numbers?
  amount          Float
  status          String     @default("pending") // pending, won, lost
  winAmount       Float?     @map("win_amount")
  createdAt       DateTime   @default(now()) @map("created_at")
  settledAt       DateTime?  @map("settled_at")

  // Relations
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  gamePeriod  GamePeriod @relation(fields: [gamePeriodId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([periodId])
  @@index([gamePeriodId])
  @@index([status])
  @@map("bets")
}

// Referral commission model - tracks commissions earned from referrals
model ReferralCommission {
  id              Int      @id @default(autoincrement())
  userId          Int      @map("user_id") // The user who earned the commission
  fromUserId      Int      @map("from_user_id") // The user whose bet generated the commission
  betId           Int      @map("bet_id") // The bet that generated the commission
  amount          Float    // Commission amount earned
  percentage      Float    // Percentage used for this commission
  level           Int      // Referral level (1, 2, or 3)
  createdAt       DateTime @default(now()) @map("created_at")

  // Relations
  user     User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([fromUserId])
  @@index([betId])
  @@index([createdAt])
  @@map("referral_commissions")
}

// Admin model for admin authentication
model Admin {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  passwordHash  String   @map("password_hash")
  secretWordHash String  @map("secret_word_hash")
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("admins")
}
